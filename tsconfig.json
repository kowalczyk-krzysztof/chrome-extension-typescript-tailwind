{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "strict": true,
    "target": "esnext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "build/js",
    "noEmitOnError": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./build/js",
    "node_modules"
  ]
}